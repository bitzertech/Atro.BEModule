{
  "fields": {
    "product": { "type": "link", "required": true },
    "motor": { "type": "link", "required": true },
    "productGeneration": { "type": "int", "required": true, "default": 0, "label": "Generation" },
    "current": { "type": "float", "required": false, "precision": 10, "scale": 2, "label": "Current (A)" },

    "createdAt": { "type": "datetime", "readOnly": true },
    "modifiedAt": { "type": "datetime", "readOnly": true },
    "createdBy": { "type": "link", "readOnly": true, "view": "views/fields/user" },
    "modifiedBy": { "type": "link", "readOnly": true, "view": "views/fields/user" }
  },
  "links": {
    "motor": { "type": "belongsTo", "entity": "Motor" },
    "product": { "type": "belongsTo", "entity": "Product" },

    "createdBy": { "type": "belongsTo", "entity": "User" },
    "modifiedBy": { "type": "belongsTo", "entity": "User" }
  },
  "collection": {
    "textFilterFields": ["motor", "product"],
    "sortBy": "createdAt",
    "asc": false
  },
  "indexes": {
    "pairUnique": {
      "unique": true,
      "columns": ["motorId", "productId", "productGeneration", "deleted"]
    },
    "createdAt": { "columns": ["createdAt"] }
  }
}
