    "t0_2": { "type": "float", "required": false, "label": "T0[2]" },
    "tc_2": { "type": "float", "required": false, "label": "TC[2]" },
    "t0_3": { "type": "float", "required": false, "label": "T0[3]" },
    "tc_3": { "type": "float", "required": false, "label": "TC[3]" },
    "t0_4": { "type": "float", "required": false, "label": "T0[4]" },
    "tc_4": { "type": "float", "required": false, "label": "TC[4]" },
    "t0_5": { "type": "float", "required": false, "label": "T0[5]" },
    "tc_5": { "type": "float", "required": false, "label": "TC[5]" },
    "t0_6": { "type": "float", "required": false, "label": "T0[6]" },   
    "tc_6": { "type": "float", "required": false, "label": "TC[6]" },
