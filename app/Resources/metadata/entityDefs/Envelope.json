{
  "type": "Base",
  "name": "Envelope",
  "label": "Envelope",
  "label_plural": "Envelopes",
  "fields": {
    "code": { "type": "varchar", "required": true, "unique": true, "maxLength": 190 },
    "name": { "type": "varchar", "required": true, "maxLength": 190 },
    "number": { "type": "int", "required": true, "label": "Number" },
    "envelope_type": { "type": "enum", "required": true, "prohibitedEmptyValue": true, "options": [ "none", "temperatue", "pressure" ], "label": "Envelope Type", "default": "temperature" },
    "delta_t_to_fault": { "type": "float", "required": true, "label": "DeltaT to Fault" },
    "delta_t_to_fault_zone7": { "type": "float", "required": true, "label": "DeltaT to Fault Zone 7" },
    "delta_t_to_warning": { "type": "float", "required": true, "label": "DeltaT to Warning" },
    "warning_reset": { "type": "float", "required": true, "label": "Warning Reset" },

    "createdAt": { "type": "datetime", "readOnly": true },
    "modifiedAt": { "type": "datetime", "readOnly": true },
    "createdBy": { "type": "link", "readOnly": true, "view": "views/fields/user" },
    "modifiedBy": { "type": "link", "readOnly": true, "view": "views/fields/user" }
  },
  "links": {
    "createdBy": { "type": "belongsTo", "entity": "User" },
    "modifiedBy": { "type": "belongsTo", "entity": "User" },

    "products": {
      "type": "manyMany",
      "entity": "Product",
      "relationName": "productMotor"
    }
  },
  "collection": {
    "textFilterFields": ["name", "code"],
    "sortBy": "createdAt",
    "asc": false
  },
  "indexes": {
    "name": { "columns": ["name", "deleted"] },
    "code": { "columns": ["code", "deleted"] }
  }}
